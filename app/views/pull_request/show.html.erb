<section class="pull-request-comments-list">
  <% @comments.each do |comment| %>
      <div class="well">
        <div class="comment">
          <h4 class="media-heading"><%= comment.user.login %> commented:</h4>
          <div>
            <small><cite><%= time_ago_in_words comment.created_at %> ago</cite></small>
          </div>
          <div>
            <%= comment.body %>
          </div>
        </div>
      </div>
  <% end %>
</section>
